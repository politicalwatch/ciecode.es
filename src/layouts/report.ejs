<% include common/start %>

<% include common/header %>

<%
var item = function() {
    return data.reports.items.filter(function(item) {
      return item.id == meta.id;
    })[0];
  }();
%>

<!-- welcome section -->
<!--breadcumb start here-->
<section class="xs-inner-welcome-section fundpress-inner-welcome-section fundpress-inner-bg-1 parallax-window" data-parallax="scroll" data-image-src="<%= global.folderName %>assets/images/background/report.png">
  <div class="xs-solid-overlay xs-bg-black"></div>
  <div class="container">
    <div class="fundpress-inner-welcome-content">
      <h2 class="color-white"><%= item.link_title %></h2>
      <ul class="xs-breadcumb fundpress-breadcumb">
        <li><a href="<%= global.folderName %>" class="color-white">Inicio /</a> <a href="<%= global.folderName %>investigacion" class="color-white"> Investigación /</a> <strong><%= item.link_title %></strong></li>
      </ul>
    </div>
  </div>
</section>
<!--breadcumb end here--><!-- End welcome section -->



<main id="report" class="xs-all-content-wrapper">
<!-- team member details section -->
<section class="xs-team-member-details-section fundpress-team-member-details-section xs-content-section-padding">
  <div class="container">
    <div class="row">
      <div class="col-md-7 col-sm-12 col-lg-8">
        <h3 class="color-navy"><%= item.title %></h3>
          <ul class="xs-simple-tag fundpress-simple-tag">
            <% for(var tagindex=0; tagindex<item.tags.length; tagindex++) { %>
            <li><i class="fa fa-tag color-blue"></i> <%= item.tags[tagindex] %></li>
            <% } %>
          </ul>
          <p>Autoras/es: <span class="bold"><%= item.authors.join(", ") %></span></p>
          <!-- <ul class="xs&#45;list&#45;item&#45;icon&#45;text"> -->
          <!--   <% for(var authorindex=0; authorindex<item.authors.length; authorindex++) { %> -->
          <!--   <li><i class="fa fa&#45;user&#45;circle fa&#45;2x color&#45;blue"></i><%= item.authors[authorindex] %></li> -->
          <!--   <% } %> -->
          <!-- </ul> -->
          <p>Año: <span class="bold"><%= item.date.year %></span></p>
        <p><%- item.text %></p>
      </div>
      <div class="col-md-5 col-sm-12 col-lg-4">
        <div class="xs-team-member-info-details text-center">
          <div class="xs-item-header xs-content-padding">
            <div class="xs-mb-30 xs-extra-css">
              <a href="<%= global.folderName %>assets/documents/<%= item.document %>" class="xs-btn btn text-uppercase btn-primary">Download this report</a>
            </div>
          </div>
          <div class="xs-team-member-bio-avatar text-center">
            <img src="<%= global.folderName %>assets/images/reports/<%= item.cover %>" alt="Imagen de portada de <%= item.link_title %>">
            </div><!-- xs-team-member-info  -->
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

</main>


<% include common/footer %>

<% include common/end %>


